<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_bg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".PaginaDeFeedback">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Página de FeedBack"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Como será sua avaliação?"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/cor_botão"
            android:text="Avaliar"
            android:textSize="20sp"
            app:strokeColor="@color/cor_borda_botão"
            app:strokeWidth="2sp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/cor_botão"
            android:text="Reportar"
            android:textSize="20sp"
            app:strokeColor="@color/cor_borda_botão"
            app:strokeWidth="2sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Avalie nosso app"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateOnly="false"
        android:numStars="5"
        android:progressBackgroundTint="@color/material_dynamic_neutral70"
        android:progressTint="@color/cor_linha_txt"
        android:stepSize="0.5"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Como podemos melhorar?"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/caixa_sugestao"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Digite seu texto aqui!"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral40" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cor_botão"
        android:text="Enviar"
        app:strokeColor="@color/cor_borda_botão"
        app:strokeWidth="2sp" />
</LinearLayout>